<li id="flip-<%= flip.id %>">
  <%= link_to photo_for(flip.user), flip.user %>
  <span class="user"><%= link_to flip.user.user_name, flip.user %></span>
  <span class="content"><%= flip.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(flip.created_at) %> ago.
    <% if current_user?(flip.user) %>
      <%= link_to "delete", flip, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
</li>
