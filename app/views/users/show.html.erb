<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= photo_for @user %>
        <%= @user.user_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.flips.any? %>
      <h3>Flips (<%= @user.flips.count %>)</h3>
      <ol class="flips">
        <%= render @flips %>
      </ol>
    <% end %>
  </div>
</div>


